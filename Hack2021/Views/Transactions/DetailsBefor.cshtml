@model Hack.Model.Transaction

@{
    ViewData["Title"] = "Details";
}

<h1>Details Before Split...</h1>

<div>
    <h4>Welcome to SplitIt!</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransactionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TransactionDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.mId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.mId)
        </dd>

    </dl>
    <span> Choose number of Payment:</span>
    <br />
    <form>

        @using (Html.BeginForm("CreateSplit", "SplitItTransactions", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.TransactionID)
            <select name="number" id="number">
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
            </select>

            <input type="submit" value="Join splitIt" />

        }

    </form>
</div>
<div>
  
    <a asp-action="Index">Back to List</a>
</div>
